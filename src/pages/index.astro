<style>
  main {
    display: grid;
    gap: var(--space-200);
    margin: auto;
    padding: 1rem;
    width: 1440px;
    max-width: calc(100% - 2rem);
    line-height: 1.6;
  }

  .hero__wrap {
    display: grid;
    gap: var(--space-40);
    grid-template-columns: 1fr 1fr;
    align-items: end;
  }

  .hero__text {
    max-width: 40ch;
  }

  .link-card-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(30ch, 1fr));
    padding: 0;
  }

  .cta {
    display: grid;
    gap: var(--space-40);
    align-items: center;
    grid-template-columns: var(--size-80) 1fr auto;
  }

  .about {
    display: grid;
    gap: var(--space-80);
    align-items: end;
    grid-template-columns: 343px 1fr;
  }

  .testimonials__grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-80);
  }

  .projects__grid {
    display: grid;
    gap: var(--space-80);
  }

  .section__title {
    border-bottom: 1px solid var(--color-border-primary);
    padding-bottom: var(--space-24);
    margin-bottom: var(--space-64);
  }
</style>

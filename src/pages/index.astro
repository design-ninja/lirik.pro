---
import "../styles/index.css";
import "@fontsource-variable/onest";

import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";

import Hero from "../components/Hero.astro";
import Services from "../components/Services/Services.astro";
import Projects from "../components/Projects/Projects.astro";
import About from "../components/About.astro";
import Testimonials from "../components/Testimonials/Testimonials.astro";
import CTA from "../components/CTA.astro";

import Footer from "../components/Footer.astro";
---

<Layout title="lirik.pro / Дизайнер Кирилл Исаченко">
  <main>
    <Header />
    <Hero />
    <Services />
    <Projects />
    <About />
    <Testimonials />
    <CTA />
    <Footer />
  </main>
</Layout>

<style lang="scss">
  main {
    display: grid;
    gap: var(--space-200);
    margin: auto;
    padding: var(--space-40);
    max-width: 1920px;
    line-height: 1.6;
  }
</style>

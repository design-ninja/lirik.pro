---
import ProjectDetailPage from '../../page-templates/ProjectDetailPage.astro';
import { getProjectWithNeighbors, getProjects } from '../../page-templates/projects-pagination';

export const prerender = true;

export async function getStaticPaths() {
  const projects = await getProjects('ru');
  return projects.map((project) => ({
    params: { slug: project.data.path }
  }));
}

const slugParam = Astro.params.slug;

if (typeof slugParam !== 'string') {
  return new Response(null, { status: 404 });
}

const { project, prevProject, nextProject } = await getProjectWithNeighbors('ru', slugParam);

if (!project) {
  return new Response(null, { status: 404 });
}
---

<ProjectDetailPage locale="ru" project={project} prevProject={prevProject} nextProject={nextProject} />

---
import { SEO } from "astro-seo";

interface Props {
  title: string;
  description: string;
}

const { title, description } = Astro.props;
---

<head>
  <SEO
    title={title}
    description={description}
    openGraph={{
      basic: {
        title: "lirik.pro - Дизайнер Кирилл Исаченко",
        type: "website",
        image: "https://lirik.pro/video/video_preview.png",
        url: "https://lirik.pro",
      },
    }}
    twitter={{
      creator: "@lirik1986",
      card: "summary_large_image",
      title: "lirik.pro - Дизайнер Кирилл Исаченко",
      description:
        "Профессиональная разработка и дизайн интернет-магазинов, SEO, брендинг, контент и UX/UI дизайн.",
      image: "https://lirik.pro/video/video_preview.png",
    }}
    extend={{
      meta: [
        {
          name: "twitter:image",
          content: "https://lirik.pro/video/video_preview.png",
        },
        {
          name: "twitter:title",
          content: "lirik.pro - Дизайнер Кирилл Исаченко",
        },
        {
          name: "twitter:description",
          content:
            "Профессиональная разработка и дизайн интернет-магазинов, SEO, брендинг, контент и UX/UI дизайн.",
        },
      ],
    }}
  />
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link
    rel="apple-touch-icon"
    sizes="180x180"
    href="/favicon/apple-touch-icon.png"
  />
  <link
    rel="icon"
    type="image/png"
    sizes="32x32"
    href="/favicon/favicon-32x32.png"
  />
  <link
    rel="icon"
    type="image/png"
    sizes="16x16"
    href="/favicon/favicon-16x16.png"
  />
  <link rel="manifest" href="favicon/site.webmanifest" />
  <meta name="generator" content={Astro.generator} />
</head>

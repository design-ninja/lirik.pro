---
import Logo from './Logo.astro';
import { type Locale } from '../utils/i18n';

type Props = {
  locale: Locale;
};

const { locale } = Astro.props as Props;
---

<header>
  <Logo locale={locale} />
</header>

<style lang="scss">
  header {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
</style>

---
import siteConfig from '../data/site-config';

const socialLinks = siteConfig.socialLinks || [];
const footer = siteConfig.footer;
const currentYear = new Date().getFullYear();
---

<footer class="footer">
  <span>
    &copy; 2003â€”{currentYear} lirik.pro
  </span>
  <span class="footer__author">{footer?.author && footer.author}</span>
</footer>

<style lang="scss">
  .footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: var(--space-40);
    padding: var(--space-40) 0;
    border-top: var(--size-1) solid var(--color-border-primary);
    color: var(--color-text-secondary);

    @media (max-width: 992px) {
      flex-direction: column;
      align-items: start;
      gap: var(--space-24);
    }

    span {
      font-size: var(--font-size-16);
      line-height: 140%;
    }
  }

  .menu {
    display: flex;
    align-items: center;
    flex-wrap: wrap;
    gap: var(--space-40);
    padding: 0;

    @media (max-width: 992px) {
      gap: var(--space-16);
    }
  }

  .menu li {
    list-style: none;
  }
</style>

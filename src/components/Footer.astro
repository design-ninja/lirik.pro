---
import { getSiteLocaleConfig } from '../data/site-config';
import { type Locale } from '../utils/i18n';

type Props = {
  locale: Locale;
};

const { locale } = Astro.props as Props;
const site = getSiteLocaleConfig(locale);
const footer = site.footer;
const currentYear = new Date().getFullYear();
---

<footer class="Footer">
  <span>
    &copy; 2003â€”{currentYear} lirik
  </span>
  {footer?.author && <span class="Footer__Author">{footer.author}</span>}
</footer>

<style lang="scss">
  .Footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: var(--space-40);
    padding: var(--space-40) 0;
    border-top: var(--size-1) solid var(--color-border-primary);
    color: var(--color-text-secondary);
    margin-top: var(--space-40);

    @media (max-width: 992px) {
      flex-direction: column;
      align-items: start;
      gap: var(--space-24);
    }

    span {
      font-size: var(--font-size-16);
      line-height: 140%;
    }
  }

  .Footer__Author {
    font-weight: var(--font-weight-medium);
  }
</style>

---
import { type Locale } from '../../utils/i18n';

type Props = { date: Date; locale: Locale };

const { date, locale } = Astro.props as Props;
const localeCode = locale === 'ru' ? 'ru-RU' : 'en-US';
---

<time datetime={date.toISOString()}>
  {
    date.toLocaleDateString(localeCode, {
      year: 'numeric',
      month: 'long',
      day: 'numeric'
    })
  }
</time>

<style lang="scss">
  time {
    color: var(--color-text-secondary);
    font-size: var(--font-size-14);
  }
</style>

---
import Service from './Service.astro';

import siteConfig from '../../data/site-config';

interface Service {
  number: string;
  title: string;
  text: string;
}

const services = siteConfig.services ?? [];
---

<section class="services" id="expertize" aria-label="Экспертиза">
  <ul role="list" class="services__grid">
    {services.map((service: Service) => <Service number={service.number} title={service.title} text={service.text} />)}
  </ul>
</section>

<style lang="scss">
  .services {
    &__grid {
      display: grid;
      padding: 0;
      border-collapse: collapse;
      border: 0.5px solid var(--color-border-primary);

      @media (max-width: 767px) {
        grid-template-columns: 1fr;
      }

      @media (min-width: 768px) and (max-width: 1199px) {
        grid-template-columns: repeat(2, 1fr);
      }

      @media (min-width: 1200px) {
        grid-template-columns: repeat(3, 1fr);
      }
    }
  }
</style>

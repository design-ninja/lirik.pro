---
import Avatar from './Avatar.astro';
import { getSiteLocaleConfig } from '../data/site-config';
import { getLocalizedPath, type Locale } from '../utils/i18n';

type Props = {
  locale: Locale;
};

const { locale } = Astro.props as Props;
const site = getSiteLocaleConfig(locale);
const author = site.author;
const homePath = getLocalizedPath('/', locale);
---

<a href={homePath} class="Logo">
  <Avatar size="medium" loading="eager" />
  <span class="Logo__Label">{author}</span>
</a>

<style>
  .Logo {
    display: flex;
    gap: var(--space-16);
    align-items: center;
  }
  .Logo__Label {
    font-size: var(--font-size-20);
  }
</style>

---
import { getCollection } from 'astro:content';
import Avatar from './Avatar.astro';
import InfoTable from './InfoTable.astro';
import { getSiteLocaleConfig } from '../data/site-config';
import { translate, type Locale } from '../utils/i18n';

type Props = {
  locale: Locale;
};

const { locale } = Astro.props as Props;
const site = getSiteLocaleConfig(locale);
const [introData] = await getCollection('components', (entry) => entry.data.id === 'intro' && entry.data.locale === locale);
const introTexts = introData?.data.texts || {};
const ariaLabel = translate(locale, 'introAriaLabel');
---

<section class="Intro" aria-label={ariaLabel}>
  <div class="Intro__Header">
    <div class="Intro__Avatar">
      <Avatar size='medium' loading='eager' />
    </div>
    <div class="Intro__Meta">
      <div class="Intro__Name">{site.author}</div>
    </div>
  </div>
  <div class="Intro__Content">
    <div class="Intro__About">
      <p class="Intro__AboutMain" set:html={introTexts.about_main}></p>
      <div set:html={introTexts.about_content}></div>
    </div>
    <InfoTable locale={locale} />
  </div>
</section>

<style lang='scss'>
  .Intro {
    &__Header {
      display: flex;
      align-items: center;
      gap: var(--space-16);
      margin-bottom: var(--space-24);
    }

    &__Content {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      align-items: center;
      gap: var(--space-40);
    }

    &__Name {
      font-size: var(--font-size-20);
      font-weight: var(--font-weight-medium);
    }

    &__About {
      max-width: 40ch;
  
      &Main {
        font-size: var(--font-size-18);
        line-height: 140%;
      }
      & > p:last-child {
        margin-bottom: 0;
      }
    }
  }

  
</style>

 

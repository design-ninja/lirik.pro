---
import siteConfig from '../data/site-config';
import Avatar from './Avatar.astro';
import InfoTable from './InfoTable.astro';
import { getCollection } from 'astro:content';

const allComponents = await getCollection('components');
const introData = allComponents.find(item => item.data.id === 'intro');
const introTexts = introData?.data.texts || {};
---

<section class='intro' aria-label='Обо мне'>
  <div class='intro__header'>
    <div class='intro__avatar'>
      <Avatar size='medium' loading='eager' />
    </div>
    <div class='intro__meta'>
      <div class='intro__name'>{siteConfig.author}</div>
    </div>
  </div>
  <div class='intro__content'>
    <div class='intro__about'>
      <p class='intro__about-main' set:html={introTexts.about_main}></p>
      <div set:html={introTexts.about_content}></div>
    </div>
    <InfoTable />
  </div>
</section>

<style lang='scss'>
  .intro {
    &__header {
      display: flex;
      align-items: center;
      gap: var(--space-16);
      margin-bottom: var(--space-24);
    }

    &__content {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      align-items: center;
      gap: var(--space-40);
    }

    &__name {
      font-size: var(--font-size-20);
      font-weight: var(--font-weight-medium);
    }

    &__about {
      max-width: 40ch;
  
      &-main {
        font-size: var(--font-size-18);
        line-height: 140%;
      }
      & > p:last-child {
        margin-bottom: 0;
      }
    }
  }

  
</style>

 

<div class='InfoTable'>
  <div class='InfoTable__Row'>
    <span class='InfoTable__Row-label'>Сейчас я здесь</span> <a class='InfoTable__Row-value' href='https://www.google.com/maps/place/Пхукет' target='_blank' rel='noopener' id='location'>—</a>
  </div>
  <div class='InfoTable__Row'>
    <span class='InfoTable__Row-label'>Слушаю</span> <a class='InfoTable__Row-value' href='#' target='_blank' rel='noopener' id='spotify'>—</a>
  </div>
  <div class='InfoTable__Row'>
    <span class='InfoTable__Row-label'>Читаю</span> <a class='InfoTable__Row-value' href='https://www.amazon.com/Creative-Act-Way-Being/dp/0593652886' target='_blank' rel='noopener' id='book'>The Creative Act: A Way of Being</a>
  </div>
  <div class='InfoTable__Row'>
    <span class='InfoTable__Row-label'>Учу</span> <a class='InfoTable__Row-value' href='#' target='_blank' rel='noopener' id='learn'>Тайский язык</a>
  </div>
</div>

<style lang='scss'>
  .InfoTable {
    display: flex;
    flex-direction: column;
    gap: var(--space-8);
    border-radius: var(--radius-m);
    border: var(--size-1) solid var(--color-border-primary);
    padding: var(--space-20);

    &__Row {
      display: flex;
      align-items: center;
      gap: var(--space-16);
      justify-content: space-between;
      opacity: 0.7;
      font-family: monospace;
      font-size: var(--font-size-14);
      border-bottom: var(--size-1) solid var(--color-border-primary);
      padding-bottom: var(--space-8);

      &:last-child {
        border-bottom: none;
        padding-bottom: 0;
      }
    }
    &__Row-label {
      flex: 0 0 auto;
    }
    &__Row-value {
      width: fit-content;
      min-width: 0;
      display: inline-block;
      white-space: nowrap;
      overflow: hidden;
      text-overflow: ellipsis;
      text-align: right;
    }
  }
</style>

<script>
  async function loadLocation() {
    const el = document.getElementById('location');
    if (!el) return;

    const RAW_URL =
      'https://gist.githubusercontent.com/design-ninja/b91a17358d2283d38a874a95eda0e94e/raw/a414a9025377e5bab759b4c01e267a73b99e2608/location.json';

    try {
      const res = await fetch(RAW_URL, { cache: 'no-store' });
      if (!res.ok) throw new Error('bad status');
      const data = await res.json();
      const value = [data.city, data.country].filter(Boolean).join(', ');
      el.textContent = value || '—';
    } catch {
      el.textContent = '—';
    }
  }

  async function loadSpotify() {
    const el = document.getElementById('spotify') as HTMLAnchorElement | null;
    if (!el) return;

    try {
      const res = await fetch('/api/spotify-last.json', { cache: 'no-store' });
      if (!res.ok) throw new Error('bad status');
      const data = await res.json();
      if (data?.url && data?.title) {
        el.href = data.url;
        el.textContent = data.title;
      } else {
        el.textContent = '—';
      }
    } catch {
      el.textContent = '—';
    }
  }

  // Load on initial page load and on every navigation (View Transitions)
  document.addEventListener('astro:page-load', () => {
    loadLocation();
    loadSpotify();
  });
</script>



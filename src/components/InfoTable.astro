<script>
  async function loadLocation() {
    const el = document.getElementById('location') as HTMLAnchorElement | null;
    if (!el) return;

    const RAW_URL = import.meta.env.PUBLIC_LOCATION_JSON_URL;

    if (!RAW_URL) {
      el.textContent = '‚Äî';
      return;
    }

    try {
      const url = RAW_URL + (RAW_URL.includes('?') ? '&' : '?') + 't=' + Date.now();
      const res = await fetch(url, { cache: 'no-store' });
      if (!res.ok) throw new Error('bad status');
      const data = await res.json();
      const value = [data.city, data.country].filter(Boolean).join(', ');
      el.textContent = value || '‚Äî';
      if (value) {
        const query = encodeURIComponent(value);
        el.href = `https://www.google.com/maps/place/${query}`;
      } else {
        el.href = '#';
      }
    } catch {
      el.textContent = '‚Äî';
    }
  }

  async function loadSpotify() {
    const el = document.getElementById('spotify') as HTMLAnchorElement | null;
    if (!el) return;

    try {
      const res = await fetch('/api/spotify-last.json', { cache: 'no-store' });
      if (!res.ok) throw new Error('bad status');
      const data = await res.json();
      if (data?.url && data?.title) {
        el.href = data.url;
        el.textContent = data.title;
      } else {
        el.textContent = '‚Äî';
      }
    } catch {
      el.textContent = '‚Äî';
    }
  }

  async function loadWakatime() {
    const el = document.getElementById('wakatime') as HTMLAnchorElement | null;
    if (!el) return;

    try {
      const res = await fetch('/api/wakatime.json?days=7', { cache: 'no-store' });
      if (!res.ok) throw new Error('bad status');
      const data = await res.json();
      if (data?.totalText) {
        el.textContent = `${data.totalText} / 7 days`;
        el.href = 'https://wakatime.com/@lirik';
      } else {
        el.textContent = '‚Äî';
      }
    } catch {
      el.textContent = '‚Äî';
    }
  }

  // Load on initial page load and on every navigation (View Transitions)
  document.addEventListener('astro:page-load', () => {
    loadLocation();
    loadSpotify();
    loadWakatime();
  });
</script>



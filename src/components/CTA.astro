---
import { Icon } from "astro-icon/components";

import Avatar from "./Avatar/Avatar.astro";
import Button from "./Button.astro";

import * as ctaTitle from "../content/base/cta.md";
import * as actionText from "../content/base/common.md";
---

<section class="cta" id="contacts" aria-label={actionText.frontmatter.action}>
  <Avatar size="large" />
  <h2 class="cta__title">{ctaTitle.frontmatter.title}</h2>
  <Button color="primary" size="large" isIcon href="https://wa.me/79620726666">
    <Icon name="whatsapp" width={24} height={24} />
    {actionText.frontmatter.action}
  </Button>
</section>

<style lang="scss">
  .cta {
    display: grid;
    gap: var(--space-40);
    align-items: center;
    grid-template-columns: var(--size-80) 1fr auto;

    @media (max-width: 992px) {
      grid-template-columns: 1fr;
      justify-items: start;
    }

    &__title {
      margin: 0;
    }
  }
</style>
